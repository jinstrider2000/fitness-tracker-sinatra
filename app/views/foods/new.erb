<div class="row text-center">
  <img class="index-icon" src="<%=url("images/food_icon.png")%>" alt="Food Icon">
  <h2>New Meal</h2>
  <%="<p class=\"error-msg\">#{flash[:food_create_error]}</p>" if flash.has?(:food_create_error) %>
</div>
<form action="/foods" method="POST">
  <div class="form-group">
    <label for="name-input">Name</label>
    <input id="name-input" class="form-control" type="text" name="food[name]" placeholder="Name of Meal">
  </div>
  <div class="form-group">
    <label for="calories-input">Calories</label>
    <input id="calories-input" class="form-control" type="type" name="food[calories]" placeholder="Calories Consumed">
  </div>
  <input class="btn btn-default" type="submit" value="Add Meal">
</form>