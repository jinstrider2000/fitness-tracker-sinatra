<div class="container">
  <h1>Login</h1>
  <%="<span class=\"error-msg\">#{flash[:not_found_error]}</span>" if flash.has?(:not_found_error) %>
  <%="<span class=\"error-msg\">#{flash[:login_input_error]}</span>" if flash.has?(:login_input_error) %>
  <form action="/login" method="POST">
    <div class="form-group">
      <label for="username-input">Username</label>
      <input id="username-input" class="form-control" type="text" name="username" placeholder="Username">
    </div>
    <div class="form-group">
      <label for="password-input">Password</label>
      <input id="password-input" class="form-control" type="password" name="password" placeholder="Password">
    </div>
    <input class="btn btn-default" type="submit" value="Login">
  </form>
</div>