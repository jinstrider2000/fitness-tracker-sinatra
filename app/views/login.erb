<h1>Login</h1>
<%="<p class=\"error-msg\">#{flash[:not_found_error]}</p>" if flash.has?(:not_found_error) %>
<%="<p class=\"error-msg\">#{flash[:login_input_error]}</p>" if flash.has?(:login_input_error) %>
<form action="/login" method="POST">
  <div class="form-group">
    <label for="username-input">Username</label>
    <input id="username-input" class="form-control" type="text" name="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="password-input">Password</label>
    <input id="password-input" class="form-control" type="password" name="password" placeholder="Password">
  </div>
  <input class="btn btn-default" type="submit" value="Login">
</form>
<h4>Need to <a href="/signup">Register</a>?</h4>