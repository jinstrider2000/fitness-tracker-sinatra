<div class="container">
	<div class="row">
		<div class="col-sm-8">
			<img class="profile-pic-display img-circle" src="<%=profile_pic_path(@user)%>" alt="<%=first_name(@user.name)%>'s Profile Pic">
			<% <% if viewing_own_profile_while_logged_in? %>
				<h2>Welcome <%=first_name(@user.name)%>!</h2>
				<a href="/users/<%=@user.slug%>/edit">Edit</a>
			<% else %>
				<h2><%=@user.name%></h2>
			<% end %>%>
			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-5 card-style">
			<h3>Recent Exercises</h3>
			<% if @user.exercises.count < 1 %>
				<p>No Activity</p>
			<% else %>
				<ul>
				<% recent_exercises(@user).each do |exercise| %>
					<li><%=print_time(exercise.created_at)%> - <%=exercise.name%> - <em><%=exercise.calories_burned%></em></li>
				<% end %>
				</ul>
				<a class="more-link" href="users/<%=@user.slug%>/exercises">more</a>
			<% end %>
		</div>
		<div class="col-sm-5 col-sm-offset-2 card-style">
			<h3>Recent Meals</h3>
			<% if @user.foods.count < 1 %>
				<p>No Activity</p>
			<% else %>
				<ul>
				<% recent_meals(@user).each do |food| %>
					<li><%=print_time(food.created_at)%> - <%=food.name%> - <em><%=food.calories</em></li>
				<% end %>
				</ul>
				<a class="more-link" href="users/<%=@user.slug%>/foods">more</a>
			<% end %>
			
		</div>
	</div>
</div>