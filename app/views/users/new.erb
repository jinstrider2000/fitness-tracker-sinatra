<div class="container">
	<h2>Register</h2>
	<form enctype="multipart/form-data" action="/signup" method="POST">
		<div class="row">
			<div class="col-sm-5">
				<img class="profile-pic-select" src="images/users/generic/profile_pic" alt="Generic Profile Pic">
				<input class="img-upload-btn" type="file" name="profile-img" accept="images/*">
			</div>
		</div>
		<div class="row">
			<input class="col-sm-5" type="text" name="user[name]" placeholder="Full Name">
			<input class="col-sm-5 col-sm-offset-2" type="text" name="user[daily_calorie_goal]" placeholder="Email">
		</div>
		<div class="row">
			<input class="col-sm-5" type="text" name="user[username]" placeholder="Username">
			<input class="col-sm-5 col-sm-offset-2" type="password" name="user[password]" placeholder="Password">
		</div>
		<input type="submit" value="Register">
	</form>
</div>