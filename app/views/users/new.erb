<div class="container">
	<h2>Register</h2>
	<% if flash.has?(:calorie_error) || flash.has?(:username_error) || flash.has?(:image_error) %>
		<%="<span class=\"error-msg\">#{flash[:calorie_error]}</span>" if flash.has?(:calorie_error) %>
		<%="<span class=\"error-msg\">#{flash[:username_error]}</span>" if flash.has?(:username_error) %>
		<%="<span class=\"error-msg\">#{flash[:image_error]}</span>" if flash.has?(:image_error) %>
	<% end %>
	<form enctype="multipart/form-data" action="/signup" method="POST">
		<div class="row">
			<div class="col-sm-5">
				<img class="profile-pic-select" src="<%=url("images/users/generic/profile_pic.png")%>" alt="Generic Profile Pic">
				<input class="img-upload-btn" type="file" name="profile_img" accept="images/*">
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<label for="name-input">Name</label>
				<input id="name-input" type="text" name="user[name]" required placeholder="Full Name">
			</div>
			<div class="col-sm-6">
				<label for="calorie-input">Calorie Goal</label>
				<input id="calorie-input" type="text" name="user[daily_calorie_goal]" required placeholder="Daily Calorie Goal">
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<input id="usrnme-input" type="text" name="user[username]" required placeholder="Username">
			</div>
			<div class="col-sm-6">
				<input id="pswrd-input" type="password" name="user[password]" required placeholder="Password">
			</div>
		</div>
		<input type="submit" value="Register">
	</form>
</div>